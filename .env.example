# =============================================================================
# PocketBase Configuration
# =============================================================================
# PUBLIC_POCKETBASE_URL sets the PocketBase backend URL for both client and server.
# If not set, defaults to the Railway-hosted instance: https://rede-campus.up.railway.app
#
# Examples:
#   - Use Railway backend (default): Leave unset or set PUBLIC_POCKETBASE_URL=https://rede-campus.up.railway.app
#   - Use local PocketBase: PUBLIC_POCKETBASE_URL=http://127.0.0.1:8090
#
# PUBLIC_POCKETBASE_URL=https://rede-campus.up.railway.app

# Analytics
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ANALYTICS_SAMPLE_RATE=1

# Media Upload Configuration
MEDIA_MAX_IMAGE_SIZE_MB=10
MEDIA_MAX_IMAGE_COUNT=10
MEDIA_MAX_VIDEO_SIZE_MB=500
MEDIA_MAX_VIDEO_DURATION_SECONDS=300